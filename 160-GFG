Day 1 - Second Largest Element
ARRAYS

class Solution:
    def getSecondLargest(self, arr):
        # Code Here
        n=len(arr)
        if n<2:
            return -1
        first=second=float('-inf')    
        for num in arr:
             if num > first:
            second=first
            first=num
        else if second=num and first != num:
            second=num
            
        
    if second==float('-inf'):
         return -1
    else:
         return second
            
